<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <!-- Title and other stuffs -->
    <title>EMIC APM管理儀表板</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <!-- Stylesheets -->
    @*<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />*@
    <!-- Font awesome icon -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @*<link href="~/Content/fullcalendar.min.css" rel="stylesheet" />*@

    <!-- Main stylesheet -->
    @*<link href="~/Content/style.css" rel="stylesheet" />*@
    <link href="~/Content/Site.css" rel="stylesheet" />
    <!-- Widgets stylesheet -->
    @*<link href="~/Content/widgets.css" rel="stylesheet" />*@

    @*<link href="~/Content/morris.min.css" rel="stylesheet" />*@
    @RenderSection("styles", false)

    <!--[if lt IE 9]>
    <script src="~/Scripts/html5shiv.js"></script>
    <![endif]-->
    <!-- Favicon -->
    <link rel="shortcut icon" href="./img/icon.ico" />
    <link rel="bookmark" href="./img/icon.ico" />

    <!-- JS -->
    <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    @*<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>*@
    @*<script src="~/Scripts/fullcalendar/fullcalendar.min.js"></script>*@
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    @*<script src="~/Scripts/raphael.js"></script>*@
    @*<script src="~/Scripts/morris.min.js"></script>*@
    <script src="~/Scripts/ajaxExtensions.js"></script>
    @RenderSection("scripts", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("管理儀表板", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("System", "SystemInfo", "Admin")</li>
                    <li>@Html.ActionLink("VM", "VMInfo", "Admin")</li>
                    <li>@Html.ActionLink("Target", "HealthTarget", "Admin")</li>
                    <li>@Html.ActionLink("Notification", "NotificationInfo", "Admin")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>
    <!-- Footer starts -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Copyright info -->
                    <p class="copy">Copyright &copy; 2019 | <a href="#">EMIC</a> </p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer ends -->
    <!-- Modal -->
    <div class="modal fade" id="alerts" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><span class="glyphicon glyphicon-lock"></span> 警示</h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> 關閉</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="infos" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><span class="glyphicon glyphicon-lock"></span>訊息</h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
</body>
</html>